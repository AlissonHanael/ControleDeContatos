@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de Apagar o Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100" role="button" asp-controller="Contato" asp-action="Index">Cancelar exlusão</a>
<a class="btn btn-danger w-100 mt-2" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Confirmar exclusão</a>